@using Microsoft.AspNetCore.Components

<MudDialog>
    <DialogContent>
        <MudList T="string" ReadOnly>
            @if (MapNameResolver.UndefinedMapNames.Count > 0)
            {
                <MudListSubheader>Onbekende map namen</MudListSubheader>
                @foreach (var name in MapNameResolver.UndefinedMapNames)
                {
                    <MudListItem>@name</MudListItem>
                }
                <MudDivider />
            }
            @if (TankNameResolver.UndefinedTankNames.Count > 0)
            {
                <MudListSubheader>Onbekende tank namen</MudListSubheader>
                @foreach (var name in TankNameResolver.UndefinedTankNames)
                {
                    <MudListItem>@name</MudListItem>
                }
            }
        </MudList>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Sluiten</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] 
    public required IMudDialogInstance MudDialog { get; set; }

    void Cancel() => MudDialog.Close(DialogResult.Ok(true));
}